\documentclass[12pt]{article}
\usepackage[a4paper]{geometry}

% Math.
\usepackage{amsmath} % Improved math, e.g. \`text' for text inside math mode; \`align', which should always be used instead of \`eqnarray'.
\usepackage{tabu} % Replacement of \`tabular' with more features (e.g. auto-detecting if inside math mode).
\usepackage{amsfonts}

\usepackage{polyglossia}
\setmainlanguage{polish}
\setotherlanguage[variant=british]{english}

%\usepackage{parskip} % Space between paragraphs instead of indent.

\title{}
\author{}
\date{}

